{
  "connections": [ { "port": 8800 } ],
  "registrations": [
    { "plugin": "vision" },
    {
      "plugin": {
        "register": "visionary",
        "options": {
          "engines": { "pug": "pug" },
          "path": "tpls"
        }
      }
    },
    {
      "plugin": {
        "register": "dogwater",
        "options": {
          "connections": {
            "memoryDB": {
              "adapter": "memory"
            }
          },
          "adapters": {
            "memory": "sails-memory"
          },
          "models": [{
            "schema": true,
            "identity": "user",
            "connection": "memoryDB",
            "attributes": {
              "name": {
                "type": "string",
                "unique": true
              }
            }
          }]
        }
      }
    },
    { "plugin": "./routes/home" },
    {
      "plugin": {
        "register": "good",
        "options": {
          "reporters": {
            "console": [
              {
                "module": "good-squeeze",
                "name": "Squeeze",
                "args": [{
                  "response": "*",
                  "log": "*"
                }]
              },
              { "module": "good-console" },
              "stdout"
            ]
          }
        }
      }
    },
    {
      "plugin": { "register": "./routes/bap" },
      "options": { "routes": { "prefix": "/woot" } }
    }
  ]
}
