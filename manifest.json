{
  "connections": [
    {
      "port": 8800,
      "labels": ["web"]
    },
    {
      "port": 8801,
      "labels": ["api"]
    }
  ],
  "registrations": [
    { "plugin": "vision" },
    {
      "plugin": {
        "register": "visionary",
        "options": {
          "engines": { "pug": "pug" },
          "path": "views"
        }
      }
    },
    {
      "plugin": {
        "register": "dogwater",
        "options": {
          "connections": {
            "memoryDB": {
              "adapter": "memory"
            }
          },
          "adapters": {
            "memory": "sails-memory"
          },
          "models": "lib/models",
          "fixtures": [{
            "model": "users",
            "items": [
              { "name": "Guinness" },
              { "name": "Sully" },
              { "name": "Ren" }
            ]
          }]
        }
      }
    },
    { "plugin": "bedwetter" },
    {
      "plugin": {
        "register": "good",
        "options": {
          "reporters": {
            "console": [
              {
                "module": "good-squeeze",
                "name": "Squeeze",
                "args": [{
                  "response": "*",
                  "log": "*"
                }]
              },
              { "module": "good-console" },
              "stdout"
            ]
          }
        }
      }
    },
    {
      "plugin": "./routes/home",
      "options": { "select": ["web"] }
    },
    {
      "plugin": "./routes/users",
      "options": { "select": ["web"] }
    },
    {
      "plugin": "./routes/api-users",
      "options": { "select": ["api"] }
    }
  ]
}
